{
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "testEnvironment": "node",
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$"
}